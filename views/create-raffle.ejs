<div class="max-w-4xl mx-auto">
    <div class="card-gradient rounded-xl shadow-xl overflow-hidden">
        <div class="p-8">
            <h1 class="text-4xl font-bold text-gray-800 mb-8">Create New Raffle</h1>
            
            <form action="/create-raffle" method="POST" enctype="multipart/form-data" class="space-y-8">
                <div>
                    <label for="title" class="block text-sm font-medium text-gray-700 mb-2">Raffle Title</label>
                    <input type="text" name="title" id="title" required
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-raffle-primary focus:border-transparent transition-all duration-200"
                        placeholder="Enter a catchy title for your raffle">
                </div>

                <div>
                    <label for="description" class="block text-sm font-medium text-gray-700 mb-2">Description</label>
                    <textarea name="description" id="description" rows="4" required
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-raffle-primary focus:border-transparent transition-all duration-200"
                        placeholder="Describe your raffle and what makes it special"></textarea>
                </div>

                <div>
                    <label for="image" class="block text-sm font-medium text-gray-700 mb-2">Raffle Image</label>
                    <input type="file" name="image" id="image" accept="image/*"
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-raffle-primary focus:border-transparent transition-all duration-200">
                    <p class="mt-1 text-sm text-gray-500">Upload an image for your raffle (JPEG, PNG, GIF, max 5MB)</p>
                </div>

                <div>
                    <label for="raffleType" class="block text-sm font-medium text-gray-700 mb-2">Raffle Type</label>
                    <select name="raffleType" id="raffleType" required
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-raffle-primary focus:border-transparent transition-all duration-200">
                        <option value="tickets">Ticket-based Raffle</option>
                        <option value="auction">Item Auction</option>
                    </select>
                </div>

                <div id="ticketFields">
                    <div>
                        <label for="ticketPrice" class="block text-sm font-medium text-gray-700 mb-2">Ticket Price ($)</label>
                        <input type="number" name="ticketPrice" id="ticketPrice" min="1" step="0.01"
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-raffle-primary focus:border-transparent transition-all duration-200"
                            placeholder="Enter the price per ticket">
                    </div>

                    <div>
                        <label for="totalTickets" class="block text-sm font-medium text-gray-700 mb-2">Total Number of Tickets</label>
                        <input type="number" name="totalTickets" id="totalTickets" min="1"
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-raffle-primary focus:border-transparent transition-all duration-200"
                            placeholder="How many tickets will be available?">
                    </div>
                </div>

                <div id="auctionFields" style="display: none;">
                    <div>
                        <label for="startingBid" class="block text-sm font-medium text-gray-700 mb-2">Starting Bid ($)</label>
                        <input type="number" name="startingBid" id="startingBid" min="1" step="0.01"
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-raffle-primary focus:border-transparent transition-all duration-200"
                            placeholder="Enter the starting bid amount">
                    </div>

                    <div>
                        <label for="minimumBidIncrement" class="block text-sm font-medium text-gray-700 mb-2">Minimum Bid Increment ($)</label>
                        <input type="number" name="minimumBidIncrement" id="minimumBidIncrement" min="1" step="0.01"
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-raffle-primary focus:border-transparent transition-all duration-200"
                            placeholder="Enter the minimum bid increment">
                    </div>
                </div>

                <div>
                    <label for="endDate" class="block text-sm font-medium text-gray-700 mb-2">End Date</label>
                    <input type="datetime-local" name="endDate" id="endDate" required
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-raffle-primary focus:border-transparent transition-all duration-200">
                </div>

                <div>
                    <label for="donorName" class="block text-sm font-medium text-gray-700 mb-2">Item Donor Name</label>
                    <input type="text" name="donorName" id="donorName" required
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-raffle-primary focus:border-transparent transition-all duration-200"
                        placeholder="Enter the name of the person/company donating the item">
                </div>

                <div>
                    <label for="itemCondition" class="block text-sm font-medium text-gray-700 mb-2">Item Condition</label>
                    <select name="itemCondition" id="itemCondition" required
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-raffle-primary focus:border-transparent transition-all duration-200">
                        <option value="new">New</option>
                        <option value="like_new">Like New</option>
                        <option value="good">Good</option>
                        <option value="fair">Fair</option>
                        <option value="poor">Poor</option>
                    </select>
                </div>

                <div>
                    <label for="itemValue" class="block text-sm font-medium text-gray-700 mb-2">Estimated Item Value ($)</label>
                    <input type="number" name="itemValue" id="itemValue" min="0" step="0.01" required
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-raffle-primary focus:border-transparent transition-all duration-200"
                        placeholder="Enter the estimated value of the item">
                </div>

                <div class="flex justify-end space-x-4 pt-4">
                    <a href="/raffles" class="px-6 py-3 border-2 border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition-all duration-200 hover-scale">
                        Cancel
                    </a>
                    <button type="submit" class="btn-primary hover-scale">
                        Create Raffle
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
document.getElementById('raffleType').addEventListener('change', function() {
    const ticketFields = document.getElementById('ticketFields');
    const auctionFields = document.getElementById('auctionFields');
    
    if (this.value === 'tickets') {
        ticketFields.style.display = 'block';
        auctionFields.style.display = 'none';
    } else {
        ticketFields.style.display = 'none';
        auctionFields.style.display = 'block';
    }
});
</script> 