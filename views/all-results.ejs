<div class="max-w-7xl mx-auto">
    <div class="flex justify-between items-center mb-12">
        <h1 class="text-4xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-raffle-primary to-raffle-secondary">Raffle Results</h1>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 px-4">
        <% if (raffles && raffles.length > 0) { %>
            <% raffles.forEach(raffle => { %>
                <div class="card-gradient rounded-xl shadow-xl overflow-hidden hover-scale transition-all duration-300 h-full flex flex-col">
                    <!-- Drawn Badge -->
                    <div class="absolute top-4 right-4 z-10">
                        <span class="bg-green-500 text-white px-4 py-2 rounded-full text-sm font-semibold shadow-lg">
                            Drawn
                        </span>
                    </div>

                    <!-- Image Section with Overlay -->
                    <div class="relative h-80 overflow-hidden group">
                        <% if (raffle.imageUrl) { %>
                            <img src="<%= raffle.imageUrl %>" alt="<%= raffle.title %>" 
                                 class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-500">
                            <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                        <% } else { %>
                            <div class="w-full h-full bg-gradient-to-r from-raffle-primary to-raffle-secondary flex items-center justify-center">
                                <span class="text-white text-opacity-50 text-2xl">No Image Available</span>
                            </div>
                        <% } %>
                    </div>
                    
                    <div class="p-8 flex-grow flex flex-col">
                        <!-- Title and Value Row -->
                        <div class="flex justify-between items-start mb-6">
                            <h3 class="text-2xl font-bold text-gray-800 line-clamp-2 flex-1 mr-4"><%= raffle.title %></h3>
                            <div class="text-right">
                                <div class="text-sm text-gray-500">
                                    Drawn on <%= new Date(raffle.drawnAt).toLocaleDateString() %>
                                </div>
                            </div>
                        </div>

                        <!-- Prize Summary -->
                        <div class="mb-6">
                            <p class="text-gray-600 mb-2">
                                <% if (raffle.prizes && raffle.prizes.length > 0) { %>
                                    <%= raffle.prizes.length %> prize<%= raffle.prizes.length > 1 ? 's' : '' %> awarded
                                <% } else { %>
                                    No prizes
                                <% } %>
                            </p>
                            
                            <% if (raffle.prizes && raffle.prizes.length > 0) { %>
                                <div class="flex flex-wrap gap-2 mt-2">
                                    <% raffle.prizes.slice(0, 3).forEach(prize => { %>
                                        <span class="bg-gray-100 text-gray-700 px-2 py-1 rounded-full text-xs">
                                            <%= prize.name %>
                                        </span>
                                    <% }); %>
                                    <% if (raffle.prizes.length > 3) { %>
                                        <span class="bg-gray-100 text-gray-700 px-2 py-1 rounded-full text-xs">
                                            +<%= raffle.prizes.length - 3 %> more
                                        </span>
                                    <% } %>
                                </div>
                            <% } %>
                        </div>

                        <!-- Action Button -->
                        <div class="mt-auto">
                            <a href="/raffles/<%= raffle.id %>/results" 
                               class="btn-primary w-full text-center text-lg py-3 flex items-center justify-center space-x-2">
                                <span>View Results</span>
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                                </svg>
                            </a>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <div class="col-span-full text-center py-16">
                <div class="card-gradient rounded-xl p-8 max-w-2xl mx-auto">
                    <div class="text-raffle-accent mb-4">
                        <svg class="mx-auto h-16 w-16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                        </svg>
                    </div>
                    <h3 class="text-2xl font-bold text-gray-800 mb-2">No raffle results available</h3>
                    <p class="text-gray-600">There are no drawn raffles to display yet. Check back soon!</p>
                </div>
            </div>
        <% } %>
    </div>
</div> 