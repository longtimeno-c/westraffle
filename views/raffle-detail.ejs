<div class="max-w-4xl mx-auto">
    <div class="card-gradient rounded-xl shadow-xl overflow-hidden">
        <div class="p-8">
            <div class="flex justify-between items-start mb-8">
                <h1 class="text-4xl font-bold text-gray-800"><%= raffle.title %></h1>
                <span class="bg-gradient-to-r from-raffle-accent to-raffle-primary text-white px-6 py-2 rounded-full text-lg font-semibold">
                    $<%= raffle.ticketPrice %> per ticket
                </span>
            </div>

            <% if (raffle.imageUrl) { %>
                <div class="mb-8">
                    <img src="<%= raffle.imageUrl %>" alt="<%= raffle.title %>" 
                         class="w-full h-96 object-cover rounded-xl shadow-lg">
                </div>
            <% } %>

            <div class="prose max-w-none mb-12">
                <p class="text-gray-600 text-lg leading-relaxed"><%= raffle.description %></p>
            </div>

            <!-- Raffle Details Section - Full Width -->
            <div class="mb-12">
                <div class="card-gradient p-6 rounded-xl">
                    <h2 class="text-2xl font-bold text-gray-800 mb-6">Raffle Details</h2>
                    <div class="grid grid-cols-2 gap-x-12 gap-y-4 sm:grid-cols-4">
                        <div>
                            <h3 class="text-gray-600 text-sm">Total Tickets</h3>
                            <p class="font-semibold text-gray-800 text-xl"><%= raffle.totalTickets %></p>
                        </div>
                        <div>
                            <h3 class="text-gray-600 text-sm">Sold Tickets</h3>
                            <p class="font-semibold text-gray-800 text-xl"><%= raffle.soldTickets %></p>
                        </div>
                        <div>
                            <h3 class="text-gray-600 text-sm">Available Tickets</h3>
                            <p class="font-semibold text-gray-800 text-xl"><%= raffle.totalTickets - raffle.soldTickets %></p>
                        </div>
                        <div>
                            <h3 class="text-gray-600 text-sm">End Date</h3>
                            <p class="font-semibold text-gray-800 text-xl"><%= new Date(raffle.endDate).toLocaleDateString() %></p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Prize Pool Section -->
            <div class="mb-12">
                <h2 class="text-2xl font-bold text-gray-800 mb-6">Prize Pool</h2>
                
                <% if (raffle.prizes && raffle.prizes.length > 0) { %>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <% raffle.prizes.forEach(prize => { %>
                            <div class="card-gradient p-6 rounded-xl shadow-md hover:shadow-lg transition-shadow duration-300">
                                <div class="flex flex-col sm:flex-row items-start gap-4">
                                    <% if (prize.imageUrl) { %>
                                        <div class="flex-shrink-0 w-full sm:w-auto mb-4 sm:mb-0">
                                            <img src="<%= prize.imageUrl %>" alt="<%= prize.name %>" class="w-full sm:w-24 sm:h-24 object-cover rounded-lg shadow-sm">
                                        </div>
                                    <% } %>
                                    <div class="flex-grow">
                                        <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center mb-3 gap-3">
                                            <h3 class="text-lg font-bold text-gray-800 mb-1 sm:mb-0"><%= prize.name %></h3>
                                            <span class="bg-raffle-primary bg-opacity-10 text-raffle-primary px-3 py-1 rounded-full text-sm font-semibold inline-block whitespace-nowrap">
                                                Value: $<%= prize.value %>
                                            </span>
                                        </div>
                                        <p class="text-gray-600 text-base mt-2"><%= prize.description %></p>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                    
                    <% if (raffle.isDrawn) { %>
                        <div class="mt-6 text-center">
                            <a href="/raffles/<%= raffle.id %>/results" class="inline-block px-6 py-3 bg-raffle-secondary text-white rounded-lg font-semibold hover:bg-raffle-secondary-dark transition-colors">
                                View Raffle Results
                            </a>
                        </div>
                    <% } %>
                <% } else { %>
                    <div class="text-center py-8 bg-gray-50 rounded-xl">
                        <p class="text-gray-600">
                            <% if (isAdmin) { %>
                                No prizes have been added yet. <a href="/raffles/<%= raffle.id %>/prizes" class="text-raffle-primary font-semibold">Add prizes</a>
                            <% } else { %>
                                Prize information will be announced soon.
                            <% } %>
                        </p>
                    </div>
                <% } %>
                
                <% if (isAdmin && !raffle.isDrawn) { %>
                    <div class="mt-6 text-center">
                        <a href="/raffles/<%= raffle.id %>/prizes" class="inline-block px-6 py-3 bg-raffle-secondary text-white rounded-lg font-semibold hover:bg-raffle-secondary-dark transition-colors">
                            Manage Prizes
                        </a>
                    </div>
                <% } %>
            </div>

            <div class="mb-12">
                <div class="w-full bg-gray-100 rounded-full h-4 mb-3">
                    <div class="bg-gradient-to-r from-raffle-accent to-raffle-primary h-4 rounded-full transition-all duration-500" 
                         style="width: <%= (raffle.soldTickets / raffle.totalTickets) * 100 %>%;"></div>
                </div>
                <p class="text-center text-gray-600 font-medium">
                    <%= Math.round((raffle.soldTickets / raffle.totalTickets) * 100) %>% of tickets sold
                </p>
            </div>

            <% if (raffle.soldTickets < raffle.totalTickets) { %>
                <div class="mt-12">
                    <h2 class="text-3xl font-bold text-gray-800 mb-8">Purchase Tickets</h2>
                    <form action="/raffles/<%= raffle.id %>/purchase" method="POST" class="space-y-8">
                        <div>
                            <label for="quantity" class="block text-sm font-medium text-gray-700 mb-2">Number of Tickets</label>
                            <input type="number" name="quantity" id="quantity" min="1" max="<%= raffle.totalTickets - raffle.soldTickets %>" required
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-raffle-primary focus:border-transparent transition-all duration-200">
                        </div>

                        <div>
                            <label for="name" class="block text-sm font-medium text-gray-700 mb-2">Your Name</label>
                            <input type="text" name="name" id="name" required
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-raffle-primary focus:border-transparent transition-all duration-200">
                        </div>

                        <div>
                            <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email Address</label>
                            <input type="email" name="email" id="email" required
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-raffle-primary focus:border-transparent transition-all duration-200">
                        </div>

                        <div class="flex justify-end">
                            <button type="submit" class="btn-primary hover-scale">
                                Purchase Tickets
                            </button>
                        </div>
                    </form>
                </div>
            <% } else { %>
                <div class="mt-12 text-center py-12 card-gradient rounded-xl">
                    <h2 class="text-3xl font-bold text-gray-800 mb-4">Raffle Closed</h2>
                    <p class="text-gray-600 text-lg">All tickets have been sold. Thank you for your support!</p>
                </div>
            <% } %>
        </div>
    </div>
</div> 